    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomModel[0].RoomEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomModel[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomModel[0].Space)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomModel[0].HasKitchen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomModel[0].HasCoffeeMachine)
